<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvMealTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meal"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteMeal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMealSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calories and macros"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteMeal"
        app:layout_constraintTop_toBottomOf="@id/tvMealTitle"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/btnDeleteMeal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="Delete meal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

